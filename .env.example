# MarkItDown API Configuration

# Environment (development, production)
ENVIRONMENT=development

# Disable API documentation (true/false)
DISABLE_DOCS=false

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=100

# Image cleanup configuration
# Number of days after which image folders should be deleted
IMAGE_CLEANUP_DAYS=7

# Daily cleanup time in 24-hour format (HH:MM)
IMAGE_CLEANUP_TIME=02:00

# API Keys (comma-separated list of valid API keys)
# API_KEYS=your-secret-key-1,your-secret-key-2
